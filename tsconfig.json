{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,

    "types": ["node", "@playwright/test"],

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": [
    "tests",
    "pages",
    "fixtures",
    "playwright.config.ts"
  ]
}

